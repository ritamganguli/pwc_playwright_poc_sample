{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "dryRun": false,
        "paths": [
            "src/tests/features/"
        ],
        "require": [
            "src/tests/steps/*.ts",
            "src/tests/utils/*.ts",
            "src/tests/support/*.ts",
            "src/tests/Hooks/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "junit:results/cucumber-report.xml"
        ],
        "cucumber_runner.features": [
            "src/tests/features/**/*.feature"
        ],
        "cucumber.glue": [
            "src/tests/steps/*.ts"
        ],
        "cucumber.features": [
            "src/tests/**/*.feature"
        ]
    }
}